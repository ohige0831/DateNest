# 既存を削除して作り直し
Remove-Item .gitignore -ErrorAction SilentlyContinue
@'
__pycache__/
*.py[cod]
*.pyo
*.pyd
*.so

# virtual env
.venv/
env/
venv/

# build / dist
dist/
build/
*.egg-info/

# logs & caches
*.log
*.db
*.sqlite*

# editors / OS
.vscode/
.idea/
.DS_Store
Thumbs.db
'@ | Out-File -Encoding ascii .gitignore

git add .gitignore
git commit -m "fix: correct .gitignore (ignore venv & artifacts)"
